generator client {
  provider = "prisma-client-js"
  output   = "./generated/mysql"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// MySQL Models
model User {
  id        Int    @id @default(autoincrement())
  firstname String
  lastname  String
  email     String @unique
  password  String
  phone     String @db.VarChar(20)
}

model Flight {
  id            Int      @id @default(autoincrement())
  airline       String
  price         Float
  class         String
  origin        String
  destination   String
  departuretime Int
  arrivaltime   Int
  slots         Int
  departuredate DateTime
}

model Transport {
  id          Int    @id @default(autoincrement())
  mode        String
  company     String
  price       Float
  origin      String
  destination String
  slots       Int
}

model Hotel {
  id    Int    @id @default(autoincrement())
  name  String
  city  String
  class String
  price Float
  slots Int
  beds  Int
}

model Order {
  id            Int    @id @default(autoincrement())
  userid        Int
  destinationid String
  flightid      Int
  hotelid       Int
  transportid   Int
}
